{
  "categories": [
    {
      "title": "## 🚀 Features",
      "labels": [ "feature", "enhancement" ]
    },
    {
      "title": "## 🐛 Bug Fixes",
      "labels": [ "bug", "fix" ]
    },
    {
      "title": "## 📚 Documentation",
      "labels": [ "documentation", "docs" ]
    },
    {
      "title": "## 🧰 Maintenance",
      "labels": [ "chore", "dependencies" ]
    }
  ],
  "ignore_labels": [
    "ignore",
    "skip-changelog"
  ],
  "sort": "ASC",
  "template": "${{CHANGELOG}}",
  "pr_template": "- ${{TITLE}} (#${{NUMBER}})",
  "empty_template": "- No changes",
  "label_extractor": [
    {
      "pattern": "^(build|chore|ci|docs|feat|fix|perf|refactor|revert|style|test)(\\(.+\\))?!?: (.+)",
      "target": "$1"
    }
  ],
  "transformers": [
    {
      "pattern": "^feat:",
      "target": "feature"
    },
    {
      "pattern": "^fix:",
      "target": "bug"
    },
    {
      "pattern": "^docs:",
      "target": "documentation"
    },
    {
      "pattern": "^chore:",
      "target": "chore"
    }
  ],
  "max_pull_requests": 50,
  "max_back_track_time_days": 90,
  "base_branches": [
    "master",
    "main"
  ]
}