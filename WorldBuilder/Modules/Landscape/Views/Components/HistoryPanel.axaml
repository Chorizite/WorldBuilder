<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:landscape="clr-namespace:WorldBuilder.Modules.Landscape"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="450"
             x:Class="WorldBuilder.Modules.Landscape.Views.Components.HistoryPanel"
             x:DataType="landscape:HistoryPanelViewModel">

  <Grid RowDefinitions="Auto,*">
    <Border Grid.Row="0" BorderBrush="{DynamicResource SemiColorPrimary}" BorderThickness="0,0,0,2" Margin="4,4,4,8" Padding="0,0,0,4">
      <TextBlock Text="History" FontWeight="Bold" FontSize="14" />
    </Border>
    
    <ScrollViewer Grid.Row="1" x:Name="HistoryScrollViewer">
      <ListBox ItemsSource="{Binding Items}"
               SelectedItem="{Binding SelectedItem}"
               Background="Transparent">
        <ListBox.ItemTemplate>
          <DataTemplate x:DataType="landscape:HistoryItemViewModel">
            <TextBlock Text="{Binding Name}"
                       Padding="8,4"
                       Classes.future="{Binding IsFuture}">
              <TextBlock.Styles>
                <Style Selector="TextBlock.future">
                  <Setter Property="Opacity" Value="0.5"/>
                </Style>
              </TextBlock.Styles>
            </TextBlock>
          </DataTemplate>
        </ListBox.ItemTemplate>
      </ListBox>
    </ScrollViewer>
  </Grid>
</UserControl>
