<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:WorldBuilder.Views"
             xmlns:mainComponents="clr-namespace:WorldBuilder.Views.Components"
             xmlns:vm="clr-namespace:WorldBuilder.Modules.Landscape"
             xmlns:components="clr-namespace:WorldBuilder.Modules.Landscape.Views.Components"
             xmlns:tools="clr-namespace:WorldBuilder.Shared.Modules.Landscape.Tools;assembly=WorldBuilder.Shared"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="WorldBuilder.Modules.Landscape.LandscapeView"
             x:DataType="vm:LandscapeViewModel">
  <Design.DataContext>
    <!-- This only sets the DataContext for the previewer in an IDE,
         to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
  </Design.DataContext>

  <Grid ColumnDefinitions="Auto, *, Auto">
    <!-- Left Sidebar: Tools & Properties -->
    <Grid Grid.Column="0" RowDefinitions="Auto, *" Width="300" IsVisible="{Binding !IsReadOnly}">
      <components:ToolPanel Grid.Row="0" Margin="4" />
      <components:ToolSettingsPanel Grid.Row="1" Margin="4" />
    </Grid>

    <!-- Center Viewport -->
    <Panel Grid.Column="1">
      <views:RenderView x:Name="RenderView" 
                        LandscapeDocument="{Binding ActiveDocument}" 
                        Dats="{Binding Dats}"
                        BrushPosition="{Binding BrushPosition}"
                        BrushRadius="{Binding BrushRadius}"
                        ShowBrush="{Binding ShowBrush}"
                        ShowScenery="{Binding IsSceneryEnabled}"
                        ShowStaticObjects="{Binding IsStaticObjectsEnabled}"
                        Is3DCamera="{Binding Is3DCameraEnabled}" />

      <!-- Overlay Buttons -->
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="8" Spacing="4">
        <StackPanel.Styles>
          <Style Selector="Button, ToggleButton">
            <Setter Property="Focusable" Value="False" />
            <Setter Property="Padding" Value="4" />
            <Setter Property="Width" Value="32" />
            <Setter Property="Height" Value="32" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Background" Value="#80000000" />
            <Setter Property="BorderBrush" Value="#40FFFFFF" />
            <Setter Property="BorderThickness" Value="1" />
          </Style>
          <Style Selector="ToggleButton:checked /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColor}" />
            <Setter Property="Opacity" Value="0.8" />
            <Setter Property="BorderBrush" Value="#FFFFFF" />
          </Style>
          <Style Selector="ToggleButton:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="#A0000000" />
          </Style>
          <Style Selector="ToggleButton:checked:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource SystemAccentColor}" />
            <Setter Property="Opacity" Value="1.0" />
          </Style>
        </StackPanel.Styles>
        <ToggleButton IsChecked="{Binding Is3DCameraEnabled}" ToolTip.Tip="Toggle Camera">
          <TextBlock Text="ðŸ“·" />
        </ToggleButton>
        <ToggleButton IsChecked="{Binding IsSceneryEnabled}" ToolTip.Tip="Toggle Scenery">
          <TextBlock Text="ðŸŒ³" />
        </ToggleButton>
        <ToggleButton IsChecked="{Binding IsStaticObjectsEnabled}" ToolTip.Tip="Toggle Static Objects">
          <TextBlock Text="ðŸ›ï¸" />
        </ToggleButton>
        <ToggleButton IsChecked="{Binding IsGridEnabled}" ToolTip.Tip="Toggle Grid">
          <TextBlock Text="ðŸ“" />
        </ToggleButton>
        <Button Command="{Binding PrintCameraPosition}" ToolTip.Tip="Print Camera Position">
          <TextBlock Text="ðŸŽ¯" />
        </Button>
      </StackPanel>
    </Panel>

    <!-- Right Sidebar: Layers & History -->
    <Grid Grid.Column="2" RowDefinitions="*, *" Width="300" IsVisible="{Binding !IsReadOnly}">
      <components:LayersPanel Grid.Row="0" Margin="4" DataContext="{Binding LayersPanel}" />
      <components:HistoryPanel Grid.Row="1" Margin="4" DataContext="{Binding HistoryPanel}" />
    </Grid>
  </Grid>
</UserControl>

