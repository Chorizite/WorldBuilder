<views:Base3DView
    x:Class="WorldBuilder.Editors.Landscape.Views.LandscapeEditorView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="using:WorldBuilder.Views"
    xmlns:vm="using:WorldBuilder.Editors.Landscape.ViewModels"
    x:CompileBindings="True"
    x:DataType="vm:LandscapeEditorViewModel">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition
                Width="250"
                MinWidth="150"
                MaxWidth="500" />
        </Grid.ColumnDefinitions>

        <!--  Main 3D viewport area  -->
        <Panel
            x:Name="Viewport"
            Grid.Column="0"
            Background="Transparent" />

        <!--  Splitter for tools panel  -->
        <GridSplitter
            Grid.Column="1"
            Width="5"
            HorizontalAlignment="Center"
            VerticalAlignment="Stretch"
            Background="Transparent" />

        <!--  Tools Panel with History at bottom  -->
        <Border
            Grid.Column="2"
            Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
            BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
            BorderThickness="1,0,0,0">
            <DockPanel LastChildFill="True">
                <!--  History and Snapshot Panel - docked to bottom  -->
                <Border
                    Padding="10"
                    BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                    BorderThickness="0,1,0,0"
                    DockPanel.Dock="Bottom">
                    <ContentControl Content="{Binding HistorySnapshotPanel}" />
                </Border>

                <!--  Tools Panel - fills remaining space  -->
                <ScrollViewer>
                    <StackPanel Margin="10" Spacing="15">
                        <TextBlock
                            FontSize="16"
                            FontWeight="Bold"
                            Text="Tools" />
                        <ItemsControl ItemsSource="{Binding Tools}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="0,0,0,15" Spacing="10">
                                        <TextBlock
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Text="{Binding Name}" />
                                        <ItemsControl ItemsSource="{Binding AllSubTools}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Horizontal" />
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Button
                                                        Margin="0,0,5,5"
                                                        Padding="5"
                                                        Classes.selected="{Binding IsSelected}"
                                                        Command="{Binding $parent[Grid].((vm:LandscapeEditorViewModel)DataContext).SelectSubToolCommand}"
                                                        CommandParameter="{Binding}"
                                                        Focusable="False">
                                                        <StackPanel Orientation="Horizontal" Spacing="5">
                                                            <TextBlock
                                                                FontSize="16"
                                                                Text="{Binding IconGlyph}"
                                                                ToolTip.Tip="{Binding Name}" />
                                                        </StackPanel>
                                                    </Button>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                        <Separator Margin="0,5" />
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <ContentControl
                            HorizontalContentAlignment="Stretch"
                            Content="{Binding SelectedSubTool}"
                            IsVisible="{Binding SelectedSubTool, Converter={x:Static ObjectConverters.IsNotNull}}" />
                    </StackPanel>
                </ScrollViewer>
            </DockPanel>
        </Border>
    </Grid>
</views:Base3DView>