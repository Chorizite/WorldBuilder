<UserControl
    x:Class="WorldBuilder.Editors.Landscape.Views.BucketFillSubToolView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:WorldBuilder.Editors.Landscape.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:BucketFillSubToolViewModel"
    mc:Ignorable="d">
    <StackPanel Spacing="10">
        <TextBlock
            FontSize="14"
            FontWeight="SemiBold"
            Text="Bucket Fill Settings" />

        <!--  Terrain Type Selection  -->
        <StackPanel Spacing="5">
            <TextBlock Text="Terrain Type" />
            <ComboBox
                HorizontalAlignment="Stretch"
                ItemsSource="{Binding AvailableTerrainTypes}"
                SelectedItem="{Binding SelectedTerrainType}" />
        </StackPanel>

        <TextBlock
            FontSize="11"
            Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
            Text="Click on terrain to fill all connected vertices of the same type."
            TextWrapping="Wrap" />
    </StackPanel>
</UserControl>
