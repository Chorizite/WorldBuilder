<views:Base3DView
    x:Class="WorldBuilder.Views.Editors.LandscapeEditorView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:WorldBuilder.Views"
    xmlns:vm="using:WorldBuilder.ViewModels.Editors"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:CompileBindings="True"
    x:DataType="vm:LandscapeEditorViewModel"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition
                Width="250"
                MinWidth="150"
                MaxWidth="500" />
        </Grid.ColumnDefinitions>

        <!--  Main 3D viewport area  -->
        <Control x:Name="Viewport" Grid.Column="0" />

        <!--  Splitter for resizing  -->
        <GridSplitter
            Grid.Column="1"
            Width="5"
            HorizontalAlignment="Center"
            VerticalAlignment="Stretch"
            Background="Transparent" />

        <!--  Right Side Panel  -->
        <Border
            Grid.Column="2"
            Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
            BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
            BorderThickness="1,0,0,0">
            <ScrollViewer>
                <StackPanel Margin="10" Spacing="15">
                    <!--  Tools Header  -->
                    <TextBlock
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Tools" />

                    <!--  Tool Selection Buttons  -->
                    <ItemsControl ItemsSource="{Binding Tools}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button
                                    Margin="0,0,5,5"
                                    Padding="5,5"
                                    Classes.selected="{Binding IsSelected}"
                                    Command="{Binding $parent[ItemsControl].((vm:LandscapeEditorViewModel)DataContext).SelectToolCommand}"
                                    CommandParameter="{Binding}">
                                    <StackPanel HorizontalAlignment="Center" Spacing="5">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            FontSize="20"
                                            Text="{Binding IconGlyph}"
                                            ToolTip.Tip="{Binding Name}" />
                                    </StackPanel>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!--  Separator  -->
                    <Separator />

                    <!--  SubTools Section (only shown when tool is selected)  -->
                    <Panel IsVisible="{Binding SelectedTool, Converter={x:Static ObjectConverters.IsNotNull}}">
                        <StackPanel Spacing="10">
                            <TextBlock
                                FontSize="14"
                                FontWeight="SemiBold"
                                Text="{Binding SelectedTool.Name, StringFormat='{}Sub-Tools'}" />

                            <!--  SubTool Selection Buttons  -->
                            <ItemsControl ItemsSource="{Binding SelectedTool.AllSubTools}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button
                                            Margin="0,0,5,5"
                                            Padding="5"
                                            Classes.selected="{Binding IsSelected}"
                                            Command="{Binding $parent[ItemsControl].((vm:LandscapeEditorViewModel)DataContext).SelectedTool.SelectSubToolCommand}"
                                            CommandParameter="{Binding}">
                                            <StackPanel Orientation="Horizontal" Spacing="5">
                                                <TextBlock
                                                    FontSize="16"
                                                    Text="{Binding IconGlyph}"
                                                    ToolTip.Tip="{Binding Name}" />
                                            </StackPanel>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!--  Separator  -->
                            <Separator Margin="0,5" />

                            <!--  SubTool Settings (using ViewLocator)  -->
                            <ContentControl HorizontalContentAlignment="Stretch" Content="{Binding SelectedTool.SelectedSubTool}" />
                        </StackPanel>
                    </Panel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</views:Base3DView>