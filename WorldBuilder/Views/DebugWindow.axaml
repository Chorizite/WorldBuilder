<Window
    x:Class="WorldBuilder.Views.DebugWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:WorldBuilder.Views"
    Title="Debug Window - Shared Context"
    Width="1200"
    Height="800"
    MinWidth="600"
    MinHeight="400"
    WindowStartupLocation="CenterOwner"
    ShowInTaskbar="True"
    Topmost="False">
    <Grid>
        <views:RenderView x:Name="DebugRenderView" Margin="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Orange" />
    </Grid>
</Window>
