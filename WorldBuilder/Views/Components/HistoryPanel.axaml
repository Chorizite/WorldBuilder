<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="WorldBuilder.Views.Components.HistoryPanel">
    <Border Background="{DynamicResource SolidBackgroundFillColorBaseBrush}"
            BorderBrush="{DynamicResource SurfaceStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="4" Padding="12">
        <DockPanel>
            <TextBlock DockPanel.Dock="Top" Text="History" FontWeight="SemiBold" Margin="0,0,0,8" />
            <ListBox Background="Transparent" BorderThickness="0">
                <ListBoxItem Content="Original Document (Opened)" IsEnabled="False" />
                <ListBoxItem Content="Paint Texture: Grass" />
                <ListBoxItem Content="Raise Height" Opacity="0.5" />
            </ListBox>
        </DockPanel>
    </Border>
</UserControl>
