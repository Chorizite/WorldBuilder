<Window
    x:Class="WorldBuilder.Views.SplashPageWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:WorldBuilder.Views"
    xmlns:vm="using:WorldBuilder.ViewModels"
    Title="WorldBuilder"
    Width="800"
    Height="400"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:SplashPageViewModel"
    CanResize="false"
    Icon="/Assets/avalonia-logo.ico"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <TransitioningContentControl Grid.Row="1" Content="{Binding CurrentPage}">
        <TransitioningContentControl.PageTransition>
            <CrossFade Duration="0:0:0.2" />
        </TransitioningContentControl.PageTransition>
    </TransitioningContentControl>
</Window>
