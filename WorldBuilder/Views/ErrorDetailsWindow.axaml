<Window
    x:Class="WorldBuilder.Views.ErrorDetailsWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:WorldBuilder.Views"
    Title="Error Details"
    Width="500"
    Height="300"
    x:CompileBindings="True"
    x:DataType="vm:ErrorDetailsWindowViewModel"
    xmlns:vm="clr-namespace:WorldBuilder.ViewModels"
    CanResize="True"
    Icon="/Assets/worldbuilder.ico"
    WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="*" />
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            FontSize="16"
            FontWeight="Bold"
            Text="Project Load Error" />

        <ScrollViewer Grid.Row="2">
            <TextBlock
                Name="ErrorTextBlock"
                FontSize="12"
                Text="{Binding ErrorText}"
                TextWrapping="Wrap" />
        </ScrollViewer>

        <StackPanel
            Grid.Row="4"
            HorizontalAlignment="Right"
            Orientation="Horizontal"
            Spacing="10">
            <Button
                Name="CopyButton"
                Padding="15,8"
                Classes="accent"
                Click="CopyButton_Click"
                Content="Copy Error" />
            <Button
                Name="CloseButton"
                Padding="15,8"
                Click="CloseButton_Click"
                Content="Close"
                IsDefault="True" />
        </StackPanel>
    </Grid>
</Window>